extends ../../layouts/app

block content
  
  .row.contenedorTb
    .col-md-12
      a.btn.btn-primary.fa-r(href='/facilitadores/crear/init-facilitador')
        i.fa.fa-r.fa-plus-circle
        | Nuevo Facilitador
    
      if message
        .error-message
          a.text-center #{message}
      table(data-toggle="table", data-cache="true", data-page-size="25", data-page-list="[25, 50, 100, 200]", data-height="600",data-sort-order="asc",data-sort-name='nombre_accion_Formacion', id="table-pagination", data-pagination="true", data-search="true")
        thead
          tr
            th(data-field='nombre', data-align='left', data-sortable='true') Nombre
            th(data-align='left', data-sortable='true') Tipo de personal
            th(data-align='right', data-sortable='true')
        tbody
          each facilitador in facilitadores
            tr
              td
                | #{facilitador.nombre} #{facilitador.apellidos} 
              td
                | #{facilitador.tipo}
              td
                //- a.btn.btn-default(href="/unidades/ver/#{evaluador._id}")
                //-   i.fa.fa-r.fa-print
                //-   | PDF
                a.btn.btn-default(href="/facilitadores/#{facilitador._id}/datos-personales")
                  i.fa.fa-r.fa-edit
                  | Editar
                a.btn.btn-default(href="/facilitadores/borrar/#{facilitador._id}")
                  i.fa.fa-r.fa-trash
                  | Borrar