include ../../../includes/mixins
html
  head
    include ../../../includes/head
    include ../../../includes/head_scripts

  body
    #encabezados
      include ../../../includes/titulos
      include ../../../includes/barraSup
      include ../../../includes/navbar
    #content
      #app
        .container
          .col-md-3.col-lg-2.col-sm-3
            include ../../../includes/menu
          .col-md-9.col-lg-10.col-sm-9
            nav.navbar.navbar-default(role='navigation')
              .container-fluid
                .navbar-header
                  a.navbar-brand(href='#')
                    i(class="fa fa-r #{datos.icon}")
                    | #{datos.seccion}
            .animated.fadeIn
              nav.navbar.navbar-default(role='navigation')
                div.container-fluid
                  div.navbar-header
                    button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#menu')
                      span.sr-only Toggle navigation
                      span.icon-bar
                      span.icon-bar
                      span.icon-bar
                    a.navbar-brand()
                      i.fa.fa-r.fa-building-o.fa-l
                  div#menu.collapse.navbar-collapse
                    ul.nav.navbar-nav
                      li(class=datos.paso=="1" ? "active":"")
                        a(href='/evaluadores/#{evaluador._id}/datos-personales', class=evaluador.estatus_sec_1=="true" ? "alert alert-success active-bar":"") 
                          i.fa.fa-check-circle.fa-r.fa-activo
                          | Datos personales

                      li(class=datos.paso=="2" ? "active":"")
                        a(href="/evaluadores/#{evaluador._id}/formacion-academica", class=evaluador.estatus_sec_2=="true" ? "alert alert-success active-bar":"") 
                          if evaluador.estatus_sec_2=='true'
                            i.fa.fa-check-circle.fa-r.fa-activo
                          | Formación académica
                      
                      li(class=datos.paso=="3" ? "active":"")
                        a(href='/evaluadores/#{evaluador._id}/experiencia-laboral', class=evaluador.estatus_sec_3=="true" ? "alert alert-success active-bar":"") 
                          if evaluador.estatus_sec_3=='true'
                            i.fa.fa-check-circle.fa-r.fa-activo
                          | Experiencia laboral

                      //- li(class=datos.paso=="4" ? "active":"")
                      //-   a(href='#', class=evaluador.estatus_sec_4=="true" ? "alert alert-success active-bar":"") 
                      //-     if evaluador.estatus_sec_4=='true'
                      //-       i.fa.fa-check-circle.fa-r.fa-activo
                      //-     | Experiencia como evaluador
              #form-mult
                block content
    include ../../../includes/scripts
    include ../../../includes/footer
