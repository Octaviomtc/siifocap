extends ../../layouts/app

block content
  #message
    if message
      .error-message
          a.text-center #{message}
  .row
    .col-lg-12
      .formulario.animated.fadeIn
        .titulo
          | Agregar Unidad
        .contenido
          form.form-horizontal(method='post', action="#")
            +h-input("text", "Clave", "clave", "Clave", "", 6, 3, "autofocus", "empty","")
            +h-input("text", "Nombre", "nombre", "Nombre", "", 6, 3, "", "empty","")
            +h-input("text", "Siglas", "siglas", "Siglas", "", 6, 3, "", "empty","")
            .form-group
              span(class="control-label col-md-3")
                | Dependencia
              div(class="col-md-6")
                select#dependencia.form-control(name='dependencia',data-validation="empty", data-toggle="tooltip", data-placement="top", title="")
                  option(value="") Seleccione ...
                    each dependencia in dependencias
                      option(value=dependencia.value)= dependencia.text
            +h-input("text", "Responsable", "responsable", "Responsable", "", 6, 3, "", "empty","")
            +h-input("text", "Extensión", "extension", "#", "", 6, 3, "", "empty","")
            +h-input("email", "Email", "email", "@", "", 6, 3, "", "empty","")
            +h-input("text", "Cargo", "cargo", "Cargo", "", 6, 3, "", "empty","")
            +h-input("text", "Dirección", "direccion", "Dirección", "", 6, 3, "", "empty","")
            .row
              .col-md-9.col-md-offset-3
                button.btn.btn-success.fa-r(type='submit')
                  i.fa.fa-check-circle.fa-r
                  | Agregar
      
                button.btn.btn-default.fa-r(type='reset')
                  i.fa.fa-eraser.fa-r
                  | Limpiar campos

                a.btn.btn-default(href="/unidades")
                  | Cancelar
    
    

        
