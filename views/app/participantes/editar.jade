        $("#unidad").empty();
        $("#unidad").append("<option value=''>Seleccione unidad ...</option>");
        $('#unidadForm').hide();
      }else{
        revisaUnidades(valor);
        revisaUnidadesUp(valor);
        $('#unidadForm').show();
      }
      $( "#dependencia" ).change(function(){
        var valor = $('#dependencia :selected').val();
