extends ../../layouts/app

block content
  a.btn.btn-primary.sp-btn(href='/participantes')
    i.fa.fa-r.fa-chevron-circle-left
    | Regresar
      
      
  table(data-toggle="table", data-cache="false", data-height='299', data-card-view='true')
    thead
      tr
        th(data-field='nombre') Nombre
        th(data-field='apellidos') Apellidos
        th(data-field='curp') CURP
        th(data-field='rfc') RFC
        th(data-field='entidad') Entidad
        th(data-field='genero') Genero
        th(data-field='unidad') Unidad
        th(data-field='email_inst') Correo Institucional
        th(data-field='email_pers') Correo
        th(data-field='telefono') Telefono
        th(data-field='celular') Celular
        //- th(data-field='grupo') Grupo
    tbody
      tr        
        td #{participante.nombre}
        td #{participante.apellidop} #{participante.apellidom}
        td #{participante.curp}
        td #{participante.rfc}
        td
          each entidad in entidades
            if entidad.abr==participante.entidad
              | #{entidad.nombre}
       
            
        if (participante.genero === 'H')
          td Hombre
        else
          td Mujer        
        td #{participante.dependencia} - #{participante.unidad}
        td #{participante.email_inst}@ipn.mx
        td #{participante.email_pers}
        td #{participante.lada_telefono} - #{participante.telefono}
        td #{participante.lada_celular} - #{participante.celular}
        //- td #{participante.grupo}
        //- td #{participante.accion}
