mixin textarea(name, value, label, size, error, error_dir, disabled, placeholder)
  .form-group
    label #{label}
    if disabled=="disabled"
      textarea.form-control(disabled, name=name, rows=size, data-validation=error, data-toggle="tooltip", data-placement=error_dir, title="", placeholder=placeholder) #{value}
    else
      textarea.form-control(name=name, rows=size, data-validation=error, data-toggle="tooltip", data-placement=error_dir, title="", placeholder=placeholder) #{value}

